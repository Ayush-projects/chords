{
    "manifest_version": 2,
    "name": "Chords",
    "version": "1.0",
    "description": "Sync with the Mood",
    "author": "Ayush Addhyan",
    "icons": {
        "128": "./icons/icon128.png",
        "48": "./icons/icon48.png",
        "16": "./icons/icon16.png"
    },
    "browser_action": {
        "default_icon": "./icons/icon16.png",
        "default_popup": "index.html"
    },
    
   "content_scripts":[
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],

    "background":{
        "scripts":[ "background.js"]
    },

    "permissions": ["storage", "activeTab", "declarativeContent"]
}